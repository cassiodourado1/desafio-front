@import '../../../../assets/styles/Variables'

.badge 
    border-radius 20px
    padding 0.1rem 0.6rem
    color $--badge-text
    font-size 16px
    min-width 70px
    
.badge-ux_ui
    background $--badge-ux_ui

.badge-case_study
    background $--badge-case_study

.badge-product_design 
    background $--badge-product_design

.badge-discussion
    background $--badge-discussion

.home-list 
    display flex
    min-height 50vh
    flex-direction column
    padding-top 1rem

.home-list__item 
    display flex
    align-items center
    flex 1
    margin-bottom 1rem


.home-list__item-position 
    width 40px
    height 80px
    border thin #e6e6e6 solid
    border-radius 1px
    margin-right 1rem
    display flex
    flex-direction column   

.home-list__item-position__arrow, .home-list__item-position__number 
    flex 1
    align-items center
    justify-content center

.home-list__item-position__number 
    font-weight bold
    font-size 16px

.home-list__box-info 
    flex 1

.home-list__box-info__site 
    font-size 14px
    text-transform uppercase
    color $--default-secundary-color 

.home-list__box-info__site, .home-list__box-info__title 
    text-align left
    margin 0

.home-list__box-info__bar 
    height 50px
    display flex
    align-items center


.home-list__box-info__bar__box-user 
    display flex
    align-items center
    margin-left 20px

.box-user__name 
    color $--default-third-color
    text-decoration underline
    font-weight 400
    margin-left 5px

.home-list__box-info__bar-time 
    font-size 12px
    color #a2a2a2
    margin-left 10px

.home-list__box-info__bar__coments 
    font-size 12px
    color $--default-third-color
    text-decoration underline
    margin-left 20px